
<head>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">
  <link rel="stylesheet" href="/assets/css/order.css">
</head>
<body>
<!-- partial:index.partial.html -->
<div class="app-container">
  <div class="app-content">
    <div class="app-content-header">
      <h1 class="app-content-headerText">Quản lý đơn đặt tiệc</h1>
    </div>
    <div class="app-content-actions">
        <a href="/" class="btn btn-primary text-light fw-bold text-uppercase ms-3" ><i class="fa-solid fa-angles-left me-2"></i>Trở về</a>
      {{#ISEMPTY orderParty}}
      <button class="reload-bar"><i class="fa-solid fa-rotate"></i></button>
      {{/ISEMPTY}}
      {{#NOTEMPTY orderParty}}
      <input class="search-bar" id="un-confirm" placeholder="Search..." type="text">
      <div class="app-content-actions-wrapper">
        <div class="filter-button-wrapper">
          <button class="action-button confirm-order"><span><i class="fa-solid fa-check me-1"></i>Xác nhận</span></button>
        </div>
        <div class="filter-button-wrapper">
          <button class="action-button filter jsFilter"><span>Lọc</span><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-filter"><polygon points="22 3 2 3 10 12.46 10 19 14 21 14 12.46 22 3"/></svg></button>
           <div class="filter-menu">
            <select name="filter" class="filter-items">
              <option value="orderID" selected>Mã khách hàng</option>
              <option value="userName">Tên khách hàng</option>
              <option value="userEmail">Email</option>
              <option value="phone">Số điện thoại</option>
            </select>
          </div> 
        </div>
      </div>
      {{/NOTEMPTY}}
    </div>
    {{#ISEMPTY orderParty}}
      <div class="empty-order mx-auto my-auto d-flex flex-column align-items-center">
        <i class="fa-solid fa-paw"></i>
        <span class="mt-3">HIỆN ĐANG KHÔNG CÓ ĐƠN TIỆC CHƯA XÁC NHẬN NÀO ! TRÂN TRỌNG </span>
        </div>
    {{/ISEMPTY}}
    {{#NOTEMPTY orderParty}}
    <div class="products-area-wrapper tableView">
      <div class="products-header">
        <div class="product-cell category">Mã đặt tiệc</div>
        <div class="product-cell status-cell">Tiệc</div>
        <div class="product-cell sales">Tên khách hàng</div>
        <div class="product-cell stock">Email</div>
        <div class="product-cell price">Số điện thoại</div>
        <div class="product-cell price">Người tham dự</div>
        <div class="product-cell price">Ngày tổ chức</div>
        <div class="product-cell price">Tổng đơn</div>
        <div class="product-cell price">Tiền đặt cọc</div>
        <div class="product-cell price"></div>
      </div>
      {{#each orderParty}}
      <div class="products-row">
        <div class="product-cell category"><span class="cell-label">Category:</span>{{this.orderID}}</div>
        <div class="product-cell sales"><span class="cell-label"></span>{{this.serviceID}}</div>
        <div class="product-cell stock"><span class="cell-label"></span>{{this.userName}}</div>
        <div class="product-cell price"><span class="cell-label"></span>{{this.userEmail}}</div>
        <div class="product-cell price"><span class="cell-label"></span>{{this.phone}}</div>
        <div class="product-cell price"><span class="cell-label"></span>{{this.attendeesCount}}</div>
        <div class="product-cell price"><span class="cell-label"></span>{{GETDATE this.orderDate}}</div>
        <div class="product-cell price"><span class="cell-label"></span>{{VND this.orderTotal}}</div>
        <div class="product-cell price">
          <input type="hidden" value="{{this.orderTotal}}">
          <input class="deposit" type="text" placeholder="Tiền cọc...">

          </div>
        <div class="product-cell status-cell">
          <button type="button" class="border-0 status disabled" value="{{this.orderID}}">Chưa xác nhận</button>
        </div>
      </div>
      {{/each}}
    </div>
    {{/NOTEMPTY}}
  </div>
</div>
<!-- partial -->
  <script  src="/js/order.js"></script>

</body>
</html>
